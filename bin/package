#!/usr/bin/env bash

set -euo pipefail

here=$(cd "$(dirname "$BASH_SOURCE")"; pwd)
source "$here/env.bash"

(
    cd "$PROJECT_ROOT"

    TARGET=release "$here/build"

    cask build
    cask package

    tar_file="dist/tree-sitter-$(cask version).tar"

    gzip --verbose "$tar_file" --stdout > "$tar_file.gz"

    ls dist
)
